            Coins[0].grab();
        }
        if(scene === "UF4"){
            drawMap(maps.UF4);
            player(0, "UF5", "UF1", 0);
        }
        if(scene === "UF5"){
            drawMap(maps.UF5);
            player("UF4", "UF6", "UF2", 0);
