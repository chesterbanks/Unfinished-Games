                scene = "Map";
            }
            fill(255);
            textSize(11);
            text("<<<< \nThis is a portal.\nEnter it to go back\nto the Cyber Station.", 185, 62);
        }
        if(scene === "UF2"){
            drawMap(maps.UF2);
            player("UF1", "UF3", 0, "UF5");
        }
        if(scene === "UF3"){
