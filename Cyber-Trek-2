            ellipse(207, 195, 7, 7);
            noFill();
            stroke(255, 255, 255, 100);
            arc(200, 200, 45, 45, -180, -90);
            arc(180, 225, 15, 15, -180, -90);
            arc(220, 225, 15, 15, -180, -90);
            arc(193, 195, 4, 4, -180, -90);
            arc(207, 195, 4, 4, -180, -90);
            if(hat === "Baseball"){
                fill(0, 78, 161);
                noStroke();
                arc(200, 185, 40, 30, -180, 0);
                fill(0, 0, 0, 50);
