            //background(255, 0, 0);
    }
        if(scene === "Customize2"){
            cyberBG();
            fill(0, 255, 0);
            strokeWeight(5);
            textSize(35);
            awesomeText(125, 16, 50, "CUSTOMIZE", color(0, 255, 0, 100));
