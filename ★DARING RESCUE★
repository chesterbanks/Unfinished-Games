draw = function() {
    for(var i in images){
        if (typeof images[i] !== "object") {
            colorMode(RGB, 255);
            background(0, 0, 0, 0);
            images[i] = images[i]();
        }
    }
    
    // Background
    grassyBG();
    
    // The princess and the prince
    rectMode(CORNER);
    princessPenelope(184, 412, 0.8);
    princeNolan(470, 398, 0.8);
    
    // Bezier border around title
    noFill();
    stroke(255);
    strokeWeight(2);
    for(var i = -199; i < 213; i += 45){
        pushMatrix();
        translate(i + 54, 12);
        scale(0.8, 0.6);
        bezier(273, 40, 308, 60, 307, 18, 327, 37);
        bezier(320, 42, 297, 48, 338, 59, 327, 37);
        popMatrix();
        pushMatrix();
        translate(i + 54, 177);
        scale(0.8, 0.6);
        bezier(273, 40, 308, 60, 307, 18, 327, 37);
        bezier(320, 42, 297, 48, 338, 59, 327, 37);
        popMatrix();
    }
    
    // Title
    textFont(createFont('Times New Roman Bold'));
    textAlign(CENTER, CENTER);
    fill(0, 0, 0, 50);
    textSize(89);
    text('R E S C U E', 300, 151);
    textSize(66);
    text('D  A  R  I  N  G', 300, 87);
    fill(255, 255, 255);
    textSize(89);
    text('R E S C U E', 300, 143);
    textSize(66);
    text('D  A  R  I  N  G', 300, 78);
    
    // Play button
    noFill();
    stroke(255);
    strokeWeight(2);
    triangle(256, 475, 256, 364, 349, 418);
    noStroke();
    fill(255);
    if(mouseY > mouseX / 1.7 + 203 && mouseY < -mouseX / 1.7 + 617 && mouseX > 256){
        overButton = true;
    }
    triangle(260, 468, 260, 370, 343, 418);
    
    // Set cursor
    cursor(overButton ? 'pointer' : 'default');
    
    // Reset mouse properties
    overButton = false;
    clicked = false;
};
