// Images
var images = {
    'bg': function(){
        for(var i = -15; i < width; i += 25){
            for(var j = 0; j < height; j += 15){
                pushMatrix();
                translate(i + ((j%2)*12), j);
                scale(0.5);
                noStroke();
                fill(115, 19, 19);
                rect(0, 0, 50, 30);
                fill(0, 0, 0, 50);
                beginShape();
                vertex(0, 30);
                vertex(50, 30);
                vertex(50, 0);
                bezierVertex(40, 24, 62, 26,0, 30);
                endShape();
                fill(255, 255, 255, 50);
                beginShape();
                vertex(0, 30);
                vertex(0, 0);
                vertex(50, 0);
                bezierVertex(2, 12, 8, -12,0, 30);
                endShape();
                fill(0, 0, 0, random(70));
                rect(0, 0, 50, 30);
                popMatrix();
            }
        }
        
        filter(BLUR, 1);
        return get(0, 0, width, height);
    },
    'foreground': function(){
        fill(161, 161, 161);
        rect(0, 550, 600, 50);
        fill(0, 0, 0, 30);
        rect(0, 550, 600, 20);
        for(var i = -15; i < width; i += 25){
            pushMatrix();
            translate(i, 550);
            scale(0.5);
            noStroke();
            fill(168, 168, 168);
            rect(0, 0, 50, 30);
            fill(0, 0, 0, 50);
            beginShape();
            vertex(0, 30);
            vertex(50, 30);
            vertex(50, 0);
            bezierVertex(40, 24, 62, 26,0, 30);
            endShape();
            fill(255, 255, 255, 50);
            beginShape();
            vertex(0, 30);
            vertex(0, 0);
            vertex(50, 0);
            bezierVertex(2, 12, 8, -12,0, 30);
            endShape();
            fill(0, 0, 0, random(70));
            rect(0, 0, 50, 30);
            popMatrix();
        }
        
        return get(0, 0, 600, 600);
    },
};

// Player OOP
var Player = function(){
    this.x = 100; 
    this.y = 523; this.yvel = 0;
    this.character = 'Dash';
    
    this.jumping = false;
};
Player.prototype.draw = function() {
    if(this.character === 'Dash'){
        Dash(this.x, this.y, 30);
    } else if (this.character === 'Violet'){
        Violet(this.x, this.y, 30);
    } else if (this.character === 'Helen'){
        Helen(this.x, this.y, 30);
    } else {
        Bob(this.x, this.y, 30);
    }
    
    if(keys[49]){
        this.character = 'Dash';
    }
    if(keys[50]){
        this.character = 'Violet';
    }
    if(keys[51]){
        this.character = 'Helen';
    }
    if(keys[52]){
        this.character = 'Bob';
    }
    if ((keys[UP]) && !this.jumping) {
        this.yvel -= 10;
        this.jumping = true;
    }
    
    this.jumping = true;
    this.y += this.yvel;
    this.yvel += 0.6;
    
    if (this.y >= 523 && this.yvel > 0) {
        this.jumping = false;
        this.yvel = 0;
        this.y = 523;
    }
};
var player = new Player();

// Logo
var Logo = function(){
    this.s  = 500;
    this.s2 = 1;
    this.s3 = 300;
    this.trans = 255;
};
Logo.prototype.draw = function(){
    pushStyle();
    textFont(createFont('Avenir'));
    background(160, 0, 4);
    
    pushMatrix();
    translate(300, 280);
    scale(1 - this.s2, 1 - this.s2/1.5);
    rotate(this.s2 * 360);
    noFill();
    
    stroke(251, 216, 26);
    
    // D
    strokeWeight(12);
    line(-145, -60, -145, 27);
    strokeWeight(5);
    bezier(-179, -8, -220, -20, -95, -51, -94, -17);
    bezier(-179, -8, -220, -22, -95, -42, -97, -17);
    bezier(-179, -8, -220, -22, -95, -39, -95, -12);
    bezier(-186, -15, -110, 85, 9, -19, -101, -76);
