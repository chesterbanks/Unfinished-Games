    popMatrix();
    textSize(15);
    text('M A D E   A S   P A R T   O F   C H E S T E R   B A N K S \'', 300 - this.s, 113);
    
    pushMatrix();
    translate(300, 400);
    translate(0, this.s3);
    stroke(251, 216, 26);
    strokeWeight(10);
    noFill();
    arc(-230, 90, 200, 200, -245, 30);
    arc(100, 145, 200, 200, -200, 30);
    arc(-130, 388, 500, 500, -91, -57);
    arc(-130, 388, 500, 500, -131, -125);
    popMatrix();
    
    noStroke();
    fill(160, 0, 4, 255 - this.trans);
    rect(0, 0, width, height);
    
    this.s /= 1.1;
    if(this.s < 10){
        this.s2 /= 1.1;
    }
    if(this.s2 < 0.1){
        this.s3 /= 1.1;
    }
    if(this.s3 < 0.1){
        this.trans /= 1.3;
    }
    if(this.trans < 0.1){
        scene = 'Menu';
    }
    popStyle();
};
var logo = new Logo();

draw = function() {
    textFont(createFont('Avenir Bold'));
    
    // Load those images
    for(var i in images){
        if (typeof images[i] !== "object") {
            background(0, 0, 0, 0);
            images[i] = images[i]();
        }
    }
    
    if(scene === 'Logo'){
        logo.draw();
        stroke(251, 216, 26);
        noFill();
        strokeWeight(15);
        rect(0, 0, width, height);
        noStroke();
        for(var i = -400; i < 0; i += 60){
            fill(0, 0, 0, 10);
            rect(0, 0, 0.5, 0.5, i);
            rect(width, 0, 0.5, 0.5, i);
            rect(0, height, 0.5, 0.5, i);
            rect(width, height, 0.5, 0.5, i);
        }
    }
    if(scene === 'Menu'){
        rectMode(CENTER);
        background(160, 0, 4);
        pushMatrix();
        translate(width / 2, height / 2.5);
        noStroke();
        fill(218, 227, 43, 10);
        for(var i = 300; i < 503; i += 15){
            ellipse(0, 0, i, i / 1.5);
        }
        iLogo(0, 0, 50);
        popMatrix();
        
        stroke(251, 216, 26);
        noFill();
        strokeWeight(15);
        rect(300, 300, width, height);
        
        textAlign(CENTER, CENTER);
        textFont(createFont('Avenir Bold Italic'), 65);
        fill(251, 216, 26);
        text('INCREDIBLES', width / 2, height / 1.3);
        textSize(25);
        text('THE', width / 3.8, height / 1.45);
        textFont(createFont('Avenir Italic'), 16);
        text('C H E S T E R . B A N K S    S E P T E M B E R . 2 3 . 2 0 1 7', width / 2, height / 1.18);
        
        noStroke();
        for(var i = -400; i < 0; i += 60){
            fill(0, 0, 0, 10);
            rect(0, 0, 0.5, 0.5, i);
            rect(width, 0, 0.5, 0.5, i);
            rect(0, height, 0.5, 0.5, i);
            rect(width, height, 0.5, 0.5, i);
        }
        
        rectMode(CORNER);
        
        if(clicked){
            scene = 'Game';
        }
    }
    if(scene === 'Game'){
        background(255);
        image(images.bg, 600 - frameCount * 2 % 1200, 0);
        image(images.bg, 600 - (frameCount * 2 + 600) % 1200, 0);
        
        image(images.foreground, 600 - frameCount * 3 % 1200, 0);
        image(images.foreground, 600 - (frameCount * 3 + 600) % 1200, 0);
        
        player.draw();
        
        stroke(255, 255, 255, 50);
        strokeWeight(10);
        for(var i = 0; i < 4; i ++){
            fill(0, 0, 0, 100);
            rect(70 + i * 100, 80, 80, 80, 10);
            fill(255, 255, 255);
            textSize(30);
            text((i+1), 89 + i * 100, 98);
        }
        Dash(70, 75, 30);
        Violet(170, 75, 30);
        Helen(270, 75, 30);
        Bob(370, 75, 30);
        
    }
    
    clicked = false;
};
