    if(trans.active){
        noStroke();
        if(!trans.out){
            fill(255, 255, 255, 255 - (trans.sz / 5));
            for(var i = 1; i < 10; i ++){
                ellipse(300, 300, (1500 - trans.sz) / i, (1500 - trans.sz) / i);
