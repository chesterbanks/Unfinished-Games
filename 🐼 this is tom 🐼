};

mouseClicked = function(){
    mouse.clicked = true;
};
mousePressed = function(){
    if(scene === 'Game'){
        drag.x = mouseX;
        drag.y = mouseY;
    }
};
mouseReleased = function(){
    if(scene === 'Game'){
        balls.push(new ball(mouseX, mouseY, (drag.x - mouseX) / 2, (drag.y - mouseY) / 2, 0));
    }
};
