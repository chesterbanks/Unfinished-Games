        pushMatrix();
        translate(200, 120);
        scale(1);
        noStroke();
        fill(255, 255, 255);
        ellipse(0, 0, 150, 150);
        fill(36, 36, 36);
        ellipse(30, 10, 20, 20);
        ellipse(-30, 10, 20, 20);
        noFill();
        stroke(36);
        strokeWeight(3);
        arc(0, 30, 30, -19, 33, 145);
        popMatrix();
        
        //textAlign(LEFT, TOP);
        fill(255);
        textSize(24);
        text('you killed tom', 200, 230);
        text('he died with ' + points.toFixed(0) + ' points', 200, 285);
        textSize(13);
        text('nice going!', 200, 250);
        text('that\'s something i guess', 200, 305);
        popMatrix();
        
        textAlign(CENTER, CENTER);
        textSize(35);
        buttons[2].draw();
    }
    
    // Transition
    /*trans.x = -80;
